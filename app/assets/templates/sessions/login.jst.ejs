<div id="login-div" class="hidden">
	<form accept-charset="UTF-8" action="/users/sign_in" class="new_user" id="new_session" method="post">
		<input name="utf8" type="hidden" value="&#x2713;" />
		<input name="authenticity_token" type="hidden" value="<%= AUTH_TOKEN %>" />
	  <label for="user_username">Username</label>
	  <input autofocus="autofocus" id="user_username" name="user[username]" size="30" type="text"/>
	  <label for="user_password">Password</label>
	  <input id="user_password" name="user[password]" size="30" type="password" />


	  <div><input name="commit" id="login-button" type="submit" value="Sign in" /></div>
	</form>
</div>